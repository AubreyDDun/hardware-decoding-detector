{
  "name": "my-webpack-project",
  "version": "0.0.2",
  "description": "My webpack project",
  "main": "./dist/hevc-detector.js",
  "types": "./dist/hevc-detector.d.ts",
  "scripts": {
    "clear": "rm -rf dist/",
    "output": "cd lib && tsc --outDir ../dist",
    "build": "npm run clear && webpack --mode=production --node-env=production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "serve": "webpack serve"
  },
  "devDependencies": {
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@webpack-cli/generators": "^2.4.2",
    "css-loader": "^6.7.1",
    "eslint": "^6.7.2",
    "html-webpack-plugin": "^5.5.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "mini-css-extract-plugin": "^2.6.0",
    "prettier": "^2.6.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "vue",
      "@typescript-eslint"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "class-methods-use-this": "off",
      "consistent-return": "off",
      "linebreak-style": "off"
    },
    "ignorePatterns": "public"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AubreyDDun/hardware-decoding-detector.git"
